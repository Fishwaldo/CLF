#!/bin/bash
##########################################################################
# $Id: sendmail-largeboxes,v 1.2 2004/06/21 15:07:21 kirk Exp $
##########################################################################

ls -alSh /var/spool/mail | \
   grep rw | \
   grep -E "([0-9][0-9]|[4-9])+[0-9]+([.][0-9])*[M]" | \
   gawk -F ' ' ' { print("Warning: Large mailbox: "$9" ("$5")") } '
 
